@model IEnumerable<Common.Employee>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="text-center">
        <br />
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">MidName</th>
                    <th scope="col">LastName</th>
                    <th scope="col">Department</th>
                    <th scope="col">DepPhone</th>
@if (ViewContext.HttpContext.User.IsInRole("editor"))
{
                    <th scope="col">Controls</th>
}
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <th scope="row">@employee.Name</th>
                        <th scope="row">@employee.MidName</th>
                        <th scope="row">@employee.LastName</th>
                        <th scope="row">@employee.Department</th>
                        <th scope="row">@employee.DepPhone</th>
                        @if (ViewContext.HttpContext.User.IsInRole("editor"))
                        {
                        <th scope="row">@employee.Email</th>
                        <th scope="row">@Html.ActionLink("Details", "GetEmployeeDetails", "Home", new { email = employee.Email }, null)</th>
                        <th scope="row">@Html.ActionLink("Update", "UpdateEmployee", "Home", new { id = employee.Id }, null)</th>
                        <th scope="row">
                            @Html.ActionLink("Delete", "Delete", "Home", new { email = employee.Email })
                        </th>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>

    if(ViewContext.HttpContext.User.IsInRole("editor"))
    {

    @Html.ActionLink("Add", "AddEmployee", "Home", new { }, new { @class = "btn btn-block btn-default" })
    }
 }
