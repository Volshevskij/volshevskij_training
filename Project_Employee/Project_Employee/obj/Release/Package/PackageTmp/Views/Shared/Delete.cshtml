@model Common.Employee
<div class="modal fade" id="deleteConfirm" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center" id="exampleModalLabel">Delete confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="text-center text-danger">
                    Are you sure you want to delete employee?
                    <p>@Model.LastName</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                @using (Html.BeginForm("Delete", "Home", new { email = Model.Email }, FormMethod.Post))
                {
                    <button type="submit" class="btn btn-default">Delete</button>
                }
            </div>
        </div>
    </div>
</div>

